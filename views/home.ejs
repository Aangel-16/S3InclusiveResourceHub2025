<!-- home.ejs-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inclusive Learning Hub</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">

</head>
<body>

  <%- include('partials/mainHeader') %>

<!-- Section: Hero -->
  <section class="px-4 py-3 my-3 text-center">
    <div class="container d-flex flex-column flex-lg-row align-items-center justify-content-between" style="gap: 0.5rem;">
      
      <!-- Left Text Block -->
      <div class="col-lg-6 px-2 py-3 text-lg-start text-center">
        <h1 class="display-4 fw-bold mb-3" style="color: brown;">Inclusive Education Made Simple</h1>
        <p class="lead mb-4">
          Designed for teachers working with students with disabilities, our platform offers the tools,
          content, and support needed to create engaging, accessible, and effective learning experiences.
        </p>
        <a href="/auth/login" class="btn btn-primary btn-lg" style="background-color: brown;">Get Started</a>
      </div>

      <!-- Right Image Block -->
      <div class="col-lg-5 d-flex justify-content-center">
        <img src="/images/index_bg.png" alt="Inclusive Learning" class="img-fluid" style="max-width: 90%;">
      </div>
      
    </div>
  </section>

   <!-- Features Section -->
<section class="py-5 bg-light" id="features">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="fw-bold text-dark">Your Digital Assistant for Special Education</h2>
      <p class="text-muted">Comprehensive tools and resources designed specifically for inclusive learning environments</p>
    </div>
    <div class="row g-4">
      <div class="col-md-6 col-lg-4">
        <div class="p-4 shadow-sm h-100 border rounded-4">
          <div class="mb-3 text-danger fs-2"><i class="fas fa-book-open"></i></div>
          <h5 class="fw-semibold">Ready-Made Resource Library</h5>
          <p class="text-muted">Access thousands of videos, flashcards, stories, and worksheets categorized by subject, grade level, and disability type with smart filtering.</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="p-4 shadow-sm h-100 border rounded-4">
          <div class="mb-3 text-danger fs-2"><i class="fas fa-robot"></i></div>
          <h5 class="fw-semibold">AI-Powered Content Creation</h5>
          <p class="text-muted">Generate custom lessons, personalized worksheets, and brain development games using advanced AI technology tailored to individual needs.</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="p-4 shadow-sm h-100 border rounded-4">
          <div class="mb-3 text-danger fs-2"><i class="fas fa-users"></i></div>
          <h5 class="fw-semibold">Collaborative Community</h5>
          <p class="text-muted">Connect with fellow educators, share resources publicly or privately, and contribute to a growing community-driven knowledge base.</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="p-4 shadow-sm h-100 border rounded-4">
          <div class="mb-3 text-danger fs-2"><i class="fas fa-organize"></i></div>
          <h5 class="fw-semibold">Smart Organization</h5>
          <p class="text-muted">Intelligent resource management with personal collections, advanced tagging, and easy organization of your favorite materials.</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="p-4 shadow-sm h-100 border rounded-4">
          <div class="mb-3 text-danger fs-2"><i class="fas fa-universal-access"></i></div>
          <h5 class="fw-semibold">Accessibility First</h5>
          <p class="text-muted">Every resource designed with universal design principles, ensuring materials work for learners with diverse abilities and needs.</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-4">
        <div class="p-4 shadow-sm h-100 border rounded-4">
          <div class="mb-3 text-danger fs-2"><i class="fas fa-cloud"></i></div>
          <h5 class="fw-semibold">Cloud-Based Platform</h5>
          <p class="text-muted">Access your resources anywhere, anytime with secure cloud storage, real-time sync, and cross-device compatibility.</p>
        </div>
      </div>
    </div>
  </div>
</section>

   
  <!-- Stats Section -->
  <section class="py-5 bg-white">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-3">
          <h4 class="fw-bold text-danger">10,000+</h4>
          <p class="text-muted">Learning Resources</p>
        </div>
        <div class="col-md-3">
          <h4 class="fw-bold text-danger">5,000+</h4>
          <p class="text-muted">Active Educators</p>
        </div>
        <div class="col-md-3">
          <h4 class="fw-bold text-danger">95%</h4>
          <p class="text-muted">Time Saved</p>
        </div>
        <div class="col-md-3">
          <h4 class="fw-bold text-danger">50+</h4>
          <p class="text-muted">Disability Types Supported</p>
        </div>
      </div>
    </div>
  </section>



  <%- include("partials/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>