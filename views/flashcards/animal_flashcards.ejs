        function resetAllCards() {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.classList.remove('flipped');
            });
        }

        // Initialize the game when page loads
        document.addEventListener('DOMContentLoaded', initializeCards);
    </script>
</body>
</html>