<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alphabet Flashcards</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            color: white;
        }

        .header h1 {
            font-size: 3.5em;
            font-weight: bold;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .header p {
            font-size: 1.3em;
            opacity: 0.9;
        }

        .flashcards-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .flashcard {
            background: white;
            border-radius: 20px;
            padding: 30px 20px;
            text-align: center;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .flashcard:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.25);
        }

        .flashcard::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }

        .letter-display {
            font-size: 8em;
            font-weight: bold;
            margin: 20px 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .letter-name {
            font-size: 2.2em;
            font-weight: bold;
            color: #333;
            margin-top: 15px;
            letter-spacing: 2px;
        }

        .word-example {
            font-size: 1.4em;
            color: #666;
            margin-top: 10px;
            font-style: italic;
        }

        .pronunciation {
            font-size: 1.1em;
            color: #888;
            margin-top: 5px;
        }

        .flashcard.flipped .letter-display {
            transform: scale(1.1);
        }

        /* Color scheme for different letters */
        .flashcard:nth-child(4n+1) .letter-display { color: #e74c3c; }
        .flashcard:nth-child(4n+2) .letter-display { color: #3498db; }
        .flashcard:nth-child(4n+3) .letter-display { color: #27ae60; }
        .flashcard:nth-child(4n+4) .letter-display { color: #f39c12; }

        .controls {
            text-align: center;
            margin: 40px 0;
        }

        .btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid rgba(255,255,255,0.3);
            color: white;
            padding: 12px 30px;
            font-size: 1.1em;
            border-radius: 25px;
            cursor: pointer;
            margin: 0 10px;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .btn:hover {
            background: rgba(255,255,255,0.3);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .sound-btn {
            display: none;
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2.5em;
            }
            
            .flashcards-container {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 15px;
            }
            
            .letter-display {
                font-size: 6em;
            }
            
            .letter-name {
                font-size: 1.8em;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üî§ Alphabet Flashcards üìö</h1>
        <p>Learn the alphabet with large fonts & clear visuals | Interactive learning experience</p>
    </div>

    <div class="controls">
        <button class="btn" onclick="shuffleCards()">üîÄ Shuffle</button>
        <button class="btn" onclick="resetCards()">üîÑ Reset</button>
    </div>

    <div class="flashcards-container" id="flashcards">
        <!-- Flashcards will be generated by JavaScript -->
    </div>

    <script>
        const alphabetData = [
            { letter: 'A', name: 'A', example: 'Apple', pronunciation: '/e…™/' },
            { letter: 'B', name: 'B', example: 'Ball', pronunciation: '/biÀê/' },
            { letter: 'C', name: 'C', example: 'Cat', pronunciation: '/siÀê/' },
            { letter: 'D', name: 'D', example: 'Dog', pronunciation: '/diÀê/' },
            { letter: 'E', name: 'E', example: 'Elephant', pronunciation: '/iÀê/' },
            { letter: 'F', name: 'F', example: 'Fish', pronunciation: '/…õf/' },
            { letter: 'G', name: 'G', example: 'Grape', pronunciation: '/d íiÀê/' },
            { letter: 'H', name: 'H', example: 'House', pronunciation: '/e…™t É/' },
            { letter: 'I', name: 'I', example: 'Ice', pronunciation: '/a…™/' },
            { letter: 'J', name: 'J', example: 'Jump', pronunciation: '/d íe…™/' },
            { letter: 'K', name: 'K', example: 'Kite', pronunciation: '/ke…™/' },
            { letter: 'L', name: 'L', example: 'Lion', pronunciation: '/…õl/' },
            { letter: 'M', name: 'M', example: 'Moon', pronunciation: '/…õm/' },
            { letter: 'N', name: 'N', example: 'Nose', pronunciation: '/…õn/' },
            { letter: 'O', name: 'O', example: 'Orange', pronunciation: '/o ä/' },
            { letter: 'P', name: 'P', example: 'Penguin', pronunciation: '/piÀê/' },
            { letter: 'Q', name: 'Q', example: 'Queen', pronunciation: '/kjuÀê/' },
            { letter: 'R', name: 'R', example: 'Rainbow', pronunciation: '/…ëÀêr/' },
            { letter: 'S', name: 'S', example: 'Sun', pronunciation: '/…õs/' },
            { letter: 'T', name: 'T', example: 'Tree', pronunciation: '/tiÀê/' },
            { letter: 'U', name: 'U', example: 'Umbrella', pronunciation: '/juÀê/' },
            { letter: 'V', name: 'V', example: 'Violin', pronunciation: '/viÀê/' },
            { letter: 'W', name: 'W', example: 'Water', pronunciation: '/Ààd åb…ôl.juÀê/' },
            { letter: 'X', name: 'X', example: 'X-ray', pronunciation: '/…õks/' },
            { letter: 'Y', name: 'Y', example: 'Yellow', pronunciation: '/wa…™/' },
            { letter: 'Z', name: 'Z', example: 'Zebra', pronunciation: '/ziÀê/' }
        ];

        let currentData = [...alphabetData];

        function createFlashcard(data, index) {
            return `
                <div class="flashcard" onclick="flipCard(this)" data-letter="${data.letter}">
                    <div class="letter-display">${data.letter}</div>
                    <div class="letter-name">${data.name}</div>
                    <div class="word-example">${data.example}</div>
                    <div class="pronunciation">${data.pronunciation}</div>
                </div>
            `;
        }

        function renderFlashcards() {
            const container = document.getElementById('flashcards');
            container.innerHTML = currentData.map((data, index) => createFlashcard(data, index)).join('');
        }

        function flipCard(card) {
            card.classList.toggle('flipped');
            
            // Add a visual feedback
            setTimeout(() => {
                card.classList.remove('flipped');
            }, 1000);
        }

        function playSound(letter) {
            // Create speech synthesis
            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(letter);
                utterance.rate = 0.7;
                utterance.pitch = 1.2;
                utterance.volume = 0.8;
                speechSynthesis.speak(utterance);
            }
        }

        function shuffleCards() {
            // Fisher-Yates shuffle algorithm
            for (let i = currentData.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [currentData[i], currentData[j]] = [currentData[j], currentData[i]];
            }
            renderFlashcards();
            
            // Add animation effect
            const cards = document.querySelectorAll('.flashcard');
            cards.forEach((card, index) => {
                card.style.animation = `fadeIn 0.6s ease ${index * 0.1}s both`;
            });
        }

        function playAll() {
            let index = 0;
            const playNext = () => {
                if (index < alphabetData.length) {
                    playSound(alphabetData[index].letter);
                    
                    // Highlight current card
                    const cards = document.querySelectorAll('.flashcard');
                    cards.forEach(card => card.style.transform = '');
                    if (cards[index]) {
                        cards[index].style.transform = 'scale(1.05)';
                        cards[index].scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                    
                    index++;
                    setTimeout(playNext, 1500);
                } else {
                    // Reset all cards
                    const cards = document.querySelectorAll('.flashcard');
                    cards.forEach(card => card.style.transform = '');
                }
            };
            playNext();
        }

        function resetCards() {
            currentData = [...alphabetData];
            renderFlashcards();
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Add CSS animation keyframes
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        `;
        document.head.appendChild(style);

        // Initialize the flashcards
        renderFlashcards();

        // Add keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                e.preventDefault();
                shuffleCards();
            } else if (e.key >= 'a' && e.key <= 'z') {
                const letter = e.key.toUpperCase();
                
                // Highlight the corresponding card
                const card = document.querySelector(`[data-letter="${letter}"]`);
                if (card) {
                    card.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    card.classList.add('flipped');
                    setTimeout(() => card.classList.remove('flipped'), 1000);
                }
            }
        });
    </script>
</body>
</html>