                malayalam: '‡¥ï‡µç‡¥∑‡µÄ‡¥£‡¥Ç<br>(K·π£ƒ´·πáa·πÉ)',
                english: 'Tired',
                situation: 'When our body needs rest',
                className: 'emotion-tired'
            },
            {
                face: 'üòï',
                malayalam: '‡¥Ü‡¥∂‡¥Ø‡¥ï‡µç‡¥ï‡µÅ‡¥¥‡¥™‡µç‡¥™‡¥Ç<br>(ƒÄ≈õayakku·∏ªappa·πÉ)',
                english: 'Confused',
                situation: 'When we do not understand something',
                className: 'emotion-confused'
            }
        ];

        let currentIndex = 0;

        function initializeProgressDots() {
            const progressContainer = document.getElementById('progressDots');
            progressContainer.innerHTML = '';
            
            emotions.forEach((_, index) => {
                const dot = document.createElement('div');
                dot.className = 'progress-dot';
                if (index === 0) dot.classList.add('active');
                progressContainer.appendChild(dot);
            });
        }

        function updateDisplay() {
            const emotion = emotions[currentIndex];
            const emotionFace = document.getElementById('emotionFace');
            const malayalamText = document.getElementById('malayalamText');
            const englishText = document.getElementById('englishText');
            const situationText = document.getElementById('situationText');
            const mainButton = document.getElementById('mainButton');
            
            // Update content
            emotionFace.textContent = emotion.face;
            malayalamText.innerHTML = emotion.malayalam;
            englishText.textContent = emotion.english;
            situationText.textContent = emotion.situation;
            
            // Update button styling
            mainButton.className = `big-button ${emotion.className}`;
            
            // Update progress dots
            const dots = document.querySelectorAll('.progress-dot');
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentIndex);
            });
        }

        function nextEmotion() {
            currentIndex = (currentIndex + 1) % emotions.length;
            updateDisplay();
        }

        function previousEmotion() {
            currentIndex = (currentIndex - 1 + emotions.length) % emotions.length;
            updateDisplay();
        }

        // Keyboard support for accessibility
        document.addEventListener('keydown', function(event) {
            if (event.key === 'ArrowRight' || event.key === ' ') {
                nextEmotion();
            } else if (event.key === 'ArrowLeft') {
                previousEmotion();
            }
        });

        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            initializeProgressDots();
            updateDisplay();
        });
    </script>
