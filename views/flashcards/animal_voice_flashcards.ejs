<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fun Animal Flashcards - Special Learning Resource</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .header {
            text-align: center;
            margin-bottom: 2rem;
            color: white;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            animation: bounce 2s infinite;
        }

        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        .controls {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn {
            padding: 1rem 2rem;
            border: none;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            font-family: inherit;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .btn-primary {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #4ecdc4, #44a08d);
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, #a8e6cf, #7fcdcd);
            color: #333;
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        }

        .btn:active {
            transform: translateY(-1px);
        }

        .flashcard-container {
            perspective: 1000px;
            margin-bottom: 2rem;
        }

        .flashcard {
            width: 400px;
            height: 300px;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            margin: 0 auto;
        }

        .flashcard.flipped {
            transform: rotateY(180deg);
        }

        .flashcard-side {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 2rem;
        }

        .flashcard-front {
            background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
            color: #2d3436;
        }

        .flashcard-back {
            background: linear-gradient(135deg, #a29bfe, #6c5ce7);
            color: white;
            transform: rotateY(180deg);
        }

        .animal-emoji {
            font-size: 6rem;
            margin-bottom: 1rem;
            animation: wiggle 2s ease-in-out infinite;
        }

        @keyframes wiggle {
            0%, 100% { transform: rotate(0deg); }
            25% { transform: rotate(-5deg); }
            75% { transform: rotate(5deg); }
        }

        .animal-name {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .animal-sound {
            font-size: 1.5rem;
            font-style: italic;
            opacity: 0.8;
            margin-bottom: 1rem;
        }

        .animal-fact {
            font-size: 1.1rem;
            line-height: 1.5;
            max-width: 280px;
        }

        .progress-bar {
            width: 100%;
            max-width: 400px;
            height: 20px;
            background: rgba(255,255,255,0.3);
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 1rem;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #00b894, #00cec9);
            border-radius: 10px;
            transition: width 0.5s ease;
            position: relative;
        }

        .progress-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .score-display {
            display: flex;
            gap: 2rem;
            justify-content: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .score-item {
            background: rgba(255,255,255,0.9);
            padding: 1rem 2rem;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .score-number {
            font-size: 2rem;
            font-weight: bold;
            color: #e53e3e;
        }

        .score-label {
            font-size: 1rem;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .celebration {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 4rem;
            color: #ffd700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            pointer-events: none;
            opacity: 0;
            animation: celebrate 1s ease-out;
        }

        @keyframes celebrate {
            0% { 
                opacity: 0; 
                transform: translate(-50%, -50%) scale(0.5) rotate(0deg);
            }
            50% { 
                opacity: 1; 
                transform: translate(-50%, -50%) scale(1.2) rotate(180deg);
            }
            100% { 
                opacity: 0; 
                transform: translate(-50%, -50%) scale(1) rotate(360deg);
            }
        }

        .audio-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: none;
            background: rgba(255,255,255,0.9);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        }

        .audio-btn:hover {
            transform: scale(1.1);
            background: white;
        }

        .hints {
            background: rgba(255,255,255,0.9);
            padding: 1rem 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
            text-align: center;
            color: #333;
            box-shadow: 0 3px 15px rgba(0,0,0,0.1);
        }

        .hints strong {
            color: #e53e3e;
        }

        .completion-message {
            background: linear-gradient(135deg, #00b894, #00cec9);
            color: white;
            padding: 2rem;
            border-radius: 20px;
            text-align: center;
            margin-top: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            display: none;
        }

        .completion-message h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            animation: bounce 1s infinite;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .flashcard {
                width: 300px;
                height: 250px;
            }

            .header h1 {
                font-size: 2rem;
            }

            .animal-emoji {
                font-size: 4rem;
            }

            .animal-name {
                font-size: 2rem;
            }

            .animal-sound {
                font-size: 1.2rem;
            }

            .animal-fact {
                font-size: 1rem;
            }

            .btn {
                padding: 0.8rem 1.5rem;
                font-size: 1rem;
            }

            .score-display {
                gap: 1rem;
            }

            .score-item {
                padding: 0.8rem 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>ü¶Å Fun Animal Friends! üêò</h1>
        <p>Click the cards to learn about amazing animals!</p>
    </div>

    <div class="hints">
        <strong>How to Play:</strong> Click on the colorful card to flip it and discover the animal! Listen to the sound and learn fun facts! üéµ‚ú®
    </div>

    <div class="score-display">
        <div class="score-item">
            <div class="score-number" id="currentCard">1</div>
            <div class="score-label">Current Card</div>
        </div>
        <div class="score-item">
            <div class="score-number" id="totalCards">10</div>
            <div class="score-label">Total Cards</div>
        </div>
        <div class="score-item">
            <div class="score-number" id="completedCards">0</div>
            <div class="score-label">Completed</div>
        </div>
    </div>

    <div class="progress-bar">
        <div class="progress-fill" id="progressFill" style="width: 10%"></div>
    </div>

    <div class="controls">
        <button class="btn btn-primary" onclick="previousCard()">‚¨ÖÔ∏è Previous</button>
        <button class="btn btn-secondary" onclick="flipCard()">üîÑ Flip Card</button>
        <button class="btn btn-primary" onclick="nextCard()">Next ‚û°Ô∏è</button>
        <button class="btn btn-success" onclick="playSound()">üîä Play Sound</button>
    </div>

    <div class="flashcard-container">
        <div class="flashcard" id="flashcard" onclick="flipCard()">
            <div class="flashcard-front">
                <div class="animal-emoji" id="animalEmoji">ü¶Å</div>
                <button class="audio-btn" onclick="event.stopPropagation(); playSound()">üîä</button>
            </div>
            <div class="flashcard-back">
                <div class="animal-name" id="animalName">LION</div>
                <div class="animal-sound" id="animalSound">"ROAR!"</div>
                <div class="animal-fact" id="animalFact">Lions are the kings of the jungle! They live in groups called prides and love to play with their families.</div>
                <button class="audio-btn" onclick="event.stopPropagation(); playSound()">üîä</button>
            </div>
        </div>
    </div>

    <div class="completion-message" id="completionMessage">
        <h2>üéâ Amazing Job! üéâ</h2>
        <p>You've learned about all the wonderful animals! You're a fantastic learner! üåü</p>
        <button class="btn btn-primary" onclick="resetCards()" style="margin-top: 1rem;">üîÑ Play Again</button>
    </div>

    <script>
        const animals = [
            {
                emoji: "ü¶Å",
                name: "LION",
                sound: "ROAR!",
                fact: "Lions are the kings of the jungle! They live in groups called prides and love to play with their families.",
                audioText: "Lion goes roar roar roar"
            },
            {
                emoji: "üêò",
                name: "ELEPHANT",
                sound: "TRUMPET!",
                fact: "Elephants are the biggest land animals! They have great memory and love to splash in water.",
                audioText: "Elephant goes trumpet trumpet"
            },
            {
                emoji: "üê∏",
                name: "FROG",
                sound: "RIBBIT!",
                fact: "Frogs can jump very high and love to swim! They start as tiny tadpoles in the water.",
                audioText: "Frog goes ribbit ribbit ribbit"
            },
            {
                emoji: "üêÑ",
                name: "COW",
                sound: "MOO!",
                fact: "Cows give us yummy milk! They love to eat grass and are very gentle and friendly.",
                audioText: "Cow goes moo moo moo"
            },
            {
                emoji: "üêì",
                name: "ROOSTER",
                sound: "COCK-A-DOODLE-DOO!",
                fact: "Roosters wake everyone up in the morning! They protect their chicken families and are very brave.",
                audioText: "Rooster goes cock-a-doodle-doo"
            },
            {
                emoji: "üê∂",
                name: "DOG",
                sound: "WOOF!",
                fact: "Dogs are our best friends! They love to play fetch and give the best cuddles and kisses.",
                audioText: "Dog goes woof woof woof"
            },
            {
                emoji: "üê±",
                name: "CAT",
                sound: "MEOW!",
                fact: "Cats are soft and cuddly! They love to purr when happy and can see very well in the dark.",
                audioText: "Cat goes meow meow meow"
            },
            {
                emoji: "üê∑",
                name: "PIG",
                sound: "OINK!",
                fact: "Pigs are very smart animals! They love to roll in mud to keep cool and are actually very clean.",
                audioText: "Pig goes oink oink oink"
            },
            {
                emoji: "üêµ",
                name: "MONKEY",
                sound: "OOH-OOH-AH-AH!",
                fact: "Monkeys love to swing from trees! They are very playful and love to eat bananas.",
                audioText: "Monkey goes ooh ooh ah ah"
            },
            {
                emoji: "üêß",
                name: "PENGUIN",
                sound: "SQUAWK!",
                fact: "Penguins waddle on ice and swim like fish! They wear fancy black and white 'tuxedos' every day.",
                audioText: "Penguin goes squawk squawk"
            }
        ];

        let currentIndex = 0;
        let completedSet = new Set();

        function updateCard() {
            const animal = animals[currentIndex];
            document.getElementById('animalEmoji').textContent = animal.emoji;
            document.getElementById('animalName').textContent = animal.name;
            document.getElementById('animalSound').textContent = `"${animal.sound}"`;
            document.getElementById('animalFact').textContent = animal.fact;
            
            document.getElementById('currentCard').textContent = currentIndex + 1;
            document.getElementById('totalCards').textContent = animals.length;
            
            // Reset flip state
            document.getElementById('flashcard').classList.remove('flipped');
            
            // Update progress
            updateProgress();
        }

        function updateProgress() {
            const progress = ((currentIndex + 1) / animals.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('completedCards').textContent = completedSet.size;
        }

        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.toggle('flipped');
            
            if (flashcard.classList.contains('flipped')) {
                completedSet.add(currentIndex);
                showCelebration();
                updateProgress();
                
                if (completedSet.size === animals.length) {
                    setTimeout(showCompletion, 1000);
                }
            }
        }

        function nextCard() {
            if (currentIndex < animals.length - 1) {
                currentIndex++;
                updateCard();
            } else {
                currentIndex = 0;
                updateCard();
            }
        }

        function previousCard() {
            if (currentIndex > 0) {
                currentIndex--;
                updateCard();
            } else {
                currentIndex = animals.length - 1;
                updateCard();
            }
        }

        function playSound() {
            const animal = animals[currentIndex];
            
            // Create speech synthesis
            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(animal.audioText);
                utterance.rate = 0.8;
                utterance.pitch = 1.2;
                utterance.volume = 1;
                speechSynthesis.speak(utterance);
            }
            
            // Visual feedback
            const audioButtons = document.querySelectorAll('.audio-btn');
            audioButtons.forEach(btn => {
                btn.style.backgroundColor = '#4ecdc4';
                setTimeout(() => {
                    btn.style.backgroundColor = 'rgba(255,255,255,0.9)';
                }, 500);
            });
        }

        function showCelebration() {
            const celebrations = ['üéâ', '‚≠ê', 'üåü', '‚ú®', 'üéä', 'üëè', 'üéà'];
            const randomCelebration = celebrations[Math.floor(Math.random() * celebrations.length)];
            
            const celebration = document.createElement('div');
            celebration.className = 'celebration';
            celebration.textContent = randomCelebration;
            document.body.appendChild(celebration);
            
            setTimeout(() => {
                document.body.removeChild(celebration);
            }, 1000);
        }

        function showCompletion() {
            document.getElementById('completionMessage').style.display = 'block';
        }

        function resetCards() {
            currentIndex = 0;
            completedSet.clear();
            updateCard();
            document.getElementById('completionMessage').style.display = 'none';
        }

        // Keyboard navigation for accessibility
        document.addEventListener('keydown', function(event) {
            switch(event.key) {
                case 'ArrowLeft':
                    previousCard();
                    break;
                case 'ArrowRight':
                    nextCard();
                    break;
                case ' ':
                case 'Enter':
                    event.preventDefault();
                    flipCard();
                    break;
                case 's':
                case 'S':
                    playSound();
                    break;
            }
        });

        // Initialize the first card
        updateCard();

        // Auto-play introduction sound after page loads
        window.addEventListener('load', function() {
            setTimeout(() => {
                if ('speechSynthesis' in window) {
                    const intro = new SpeechSynthesisUtterance("Welcome to Fun Animal Friends! Click the cards to learn about amazing animals!");
                    intro.rate = 0.8;
                    intro.pitch = 1.1;
                    speechSynthesis.speak(intro);
                }
            }, 1000);
        });
    </script>
</body>
</html>