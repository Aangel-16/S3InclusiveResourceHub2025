.review-table {
    width: 100%;
    border-collapse: separate !important;
    border-spacing: 0 10px !important;
}

/* Table Header */
.review-table thead th {
    background: #f1f1f1;
    padding: 14px 16px;
    text-transform: uppercase;
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    color: #444;
    border-bottom: none;
}

.review-table tbody tr {
    background: #ffffff;
    border-radius: 12px;
    transition: 0.2s ease;
}

.review-table tbody tr:hover {
    box-shadow: 0 6px 14px rgba(0,0,0,0.08);
    transform: translateY(-2px);
}

.review-table td {
    padding: 16px;
    border-top: 1px solid #efefef;
    font-size: 15px;
    color: #333;
}

/* Rounded row effect */
.review-table tr td:first-child {
    border-radius: 12px 0 0 12px;
}
.review-table tr td:last-child {
    border-radius: 0 12px 12px 0;
}

/* Review text clamp */
.review-text {
    max-width: 380px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #444;
}

/* Reply Button */
.reply-btn {
    background: #1976d2;
    padding: 8px 16px;
    border-radius: 8px;
    border: none;
    color: white;
    font-size: 0.88rem;
    font-weight: 600;
    cursor: pointer;
    transition: 0.2s;
}

.reply-btn i {
    margin-right: 6px;
}

.reply-btn:hover {
    background: #0b4c8a;
    transform: scale(1.05);
}

/* No reviews */
.no-reviews {
    text-align: center;
    padding: 50px 0;
    color: #777;
    font-size: 17px;
}

/* Modal overlay */
.modal-overlay {
    display: none;
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.45);
    z-index: 2000;
    justify-content: center;
    align-items: center;
}

/* Modal Box */
.modal-box {
    background: #fff;
    width: 460px;
    padding: 28px;
    border-radius: 14px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.28);
    animation: pop 0.25s ease;
}

@keyframes pop {
    from { transform: scale(0.9); opacity: 0; }
    to   { transform: scale(1); opacity: 1; }
}

.modal-box h3 {
    margin-bottom: 16px;
    font-size: 21px;
    font-weight: 700;
}

.modal-box textarea {
    width: 100%;
    height: 140px;
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 14px;
    resize: vertical;
}

.modal-actions {
    margin-top: 18px;
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

.cancel-btn {
    background: #777;
    padding: 8px 14px;
    border-radius: 7px;
    color: white;
    border: none;
    cursor: pointer;
}

.send-btn {
    background: #d73527;
    padding: 8px 14px;
    border-radius: 7px;
    color: white;
    border: none;
    cursor: pointer;
}

</style>
</head>

<body>
<%- include("../partials/adminSidebar") %>

<div class="main-content">
<header>
    <div class="top-bar">
        <div class="welcome-text">Welcome, <%= currentUser.firstName %> (Admin)</div>
        <div class="user-profile">
            <div class="profile-pic">A</div>
            <span>Administrator</span>
        </div>
    </div>
</header>

<div class="content-section">
    <h2><i class="fas fa-comments"></i> User Experience Reviews</h2>
    <p>Review user feedback and respond to their concerns.</p>

    <div class="table-container">
        <% if (reviews && reviews.length > 0) { %>
            <table class="review-table" align="center">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Review</th>
                        <th>Submitted</th>
                        <th>Reply</th>
                    </tr>
                </thead>
                <tbody>
                    <% reviews.forEach(review => { %>
                        <tr>
                            <td><%= review.user.firstName %> <%= review.user.lastName %></td>
                            <td class="review-text"><%= review.text %></td>
                            <td><%= new Date(review.createdAt).toLocaleDateString() %></td>
                            <td>
                                <button class="reply-btn" onclick="openReplyModal('<%= review._id %>', '<%= review.user.firstName %>')">
                                    <i class="fas fa-reply"></i> Reply
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="no-reviews">
                <i class="fas fa-inbox" style="font-size: 2rem; margin-bottom: 10px;"></i><br>
                No user reviews submitted yet.
            </p>
        <% } %>
    </div>
</div>

</div>


<!-- ========== MODAL ========== -->
<div class="modal-overlay" id="replyModal">
    <div class="modal-box">
        <h3>Reply to <span id="replyUserName"></span></h3>

        <form id="replyForm" method="POST">
            <textarea name="replyText" required placeholder="Write your response..."></textarea>

            <div class="modal-actions">
                <button type="button" class="cancel-btn" onclick="closeReplyModal()">Cancel</button>
                <button type="submit" class="send-btn">Send Reply</button>
            </div>
        </form>
    </div>
</div>

<script>
function openReplyModal(reviewId, userName) {
    document.getElementById("replyUserName").textContent = userName;
    document.getElementById("replyModal").style.display = "flex";

    // Set form action dynamically
    document.getElementById("replyForm").action = `/admin/reviews/${reviewId}/reply`;
}

function closeReplyModal() {
    document.getElementById("replyModal").style.display = "none";
}
</script>

</body>
</html>
