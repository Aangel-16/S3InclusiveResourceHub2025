<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Admin â€“ Manage Community Posts</title>

<link rel="stylesheet" href="/css/adminStyle.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
    /* ============================
       Base Layout
    ============================ */
    body {
      background: #fafafa;
      color: #333;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
    }

    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }

    .main-content {
      flex: 1;
      padding: 30px 40px;
    }

    /* ============================
       DO NOT style .user-header here
       The sidebar partial controls it.
    ============================ */

    /* ============================
       Forum Section
    ============================ */
    .forum-container {
      background: #fff;
      border-radius: 10px;
      padding: 25px 30px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .forum-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .forum-header h2 {
      font-size: 1.6rem;
      color: #222;
    }

    .btn-new {
      background: #d32f2f;
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 6px;
      font-size: 0.95rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .btn-new:hover {
      background: #b71c1c;
    }

    /* ============================
       Post Cards
    ============================ */
    .post {
      border: 1px solid #eee;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 20px;
      background: #fff;
      transition: box-shadow 0.3s ease;
    }

    .post:hover {
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    }

    .post-title {
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 8px;
      color: #d32f2f;
    }

    .post-meta {
      font-size: 0.85rem;
      color: #777;
      margin-bottom: 12px;
    }

    .post-content {
      font-size: 0.95rem;
      line-height: 1.6;
      color: #444;
      margin-bottom: 15px;
    }

    /* ============================
       Replies
    ============================ */
    .post-replies {
      background: #fafafa;
      border-left: 3px solid #d32f2f;
      padding: 10px 15px;
      border-radius: 6px;
      margin-bottom: 10px;
    }

    .reply-item {
      margin-bottom: 10px;
      padding: 8px 0;
      border-bottom: 1px dashed #ddd;
    }

    .reply-item:last-child {
      border-bottom: none;
    }

    .reply-meta {
      font-size: 0.85rem;
      color: #666;
      margin-bottom: 4px;
    }

    /* ============================
       Reply Form
    ============================ */
    .btn-reply-toggle {
      background: none;
      border: 1px solid #d32f2f;
      color: #d32f2f;
      border-radius: 5px;
      padding: 6px 14px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .btn-reply-toggle:hover {
      background: #d32f2f;
      color: white;
    }

    .reply-form-container {
      display: none;
      margin-top: 10px;
    }

    .reply-form-container.open {
      display: block;
    }

    .reply-form-container textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 6px;
      resize: vertical;
      min-height: 80px;
      font-family: inherit;
      margin-bottom: 10px;
    }

    .btn-reply-submit {
      background: #d32f2f;
      color: white;
      border: none;
      padding: 8px 14px;
      border-radius: 5px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .btn-reply-submit:hover {
      background: #b71c1c;
    }

    /* ============================
       Drawer for New Post
    ============================ */
    .post-drawer {
      position: fixed;
      top: 0;
      right: -400px;
      width: 380px;
      height: 100%;
      background: #fff;
      box-shadow: -2px 0 10px rgba(0,0,0,0.15);
      padding: 25px;
      transition: right 0.4s ease;
      z-index: 1000;
    }

    .post-drawer.open {
      right: 0;
    }

    .drawer-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
      border-bottom: 1px solid #eee;
      padding-bottom: 10px;
    }

    .drawer-header h3 {
      margin: 0;
      color: #d32f2f;
    }

    .close-btn {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #555;
    }

    .drawer-form input,
    .drawer-form textarea {
      width: 100%;
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 10px;
      margin-bottom: 15px;
      font-family: inherit;
    }

    .drawer-form textarea {
      resize: vertical;
      min-height: 100px;
    }

    .btn-post {
      background: #d32f2f;
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 6px;
      font-size: 0.95rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .btn-post:hover {
      background: #b71c1c;
    }
    </style>
</head>

<body>
<%- include("../partials/adminSidebar") %>

<div class="main-content">
<header>
    <div class="top-bar">
        <div class="welcome-text">Welcome, <%= currentUser.firstName %> (Admin)</div>
    </div>
</header>

<h2><i class="fas fa-users"></i> Community Hub - Manage Posts</h2>

<p>Total Posts: <%= posts.length %></p>
<p>Total Replies: <%= posts.reduce((acc, p) => acc + p.replies.length, 0) %></p>

<form method="GET" action="/admin/viewCommunityHub" style="margin-bottom:20px;">
    <input type="text" name="search" value="<%= search %>" placeholder="Search posts..." />
    <button type="submit" class="btn view-btn">Search</button>
</form>

<div class="table-container">
    <% if(posts.length > 0){ %>
    <table class="post-table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>Created</th>
                <th>Replies</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% posts.forEach(post => { %>
            <tr>
               <!--- <td><%= post.postedBy.firstName %> <%= post.postedBy.lastName %></td>-->
               <td>
                <%= post.postedBy ? post.postedBy.firstName + ' ' + post.postedBy.lastName : 'Deleted User' %>
                </td>

                <td><strong><%= post.title %></strong></td>
                <td><%= new Date(post.createdAt).toLocaleDateString() %></td>
                <td><%= post.replies.length %></td>
                <td>
                    <button class="btn view-btn"
                        onclick="openPostModal(JSON.parse(decodeURIComponent('<%= encodeURIComponent(JSON.stringify(post)) %>')))">
                        <i class="fas fa-eye"></i> View
                    </button>

                    <form action="/admin/community/<%= post._id %>/delete" method="POST" style="display:inline;">
                        <button class="btn delete-btn" onclick="return confirm('Delete this post?')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <p style="text-align:center; padding:40px;">No community posts yet.</p>
    <% } %>
</div>
</div>

<!-- Modal -->
<div id="postModal" class="modal-overlay">
    <div class="modal-box">
        <h3 id="postTitle"></h3>
        <p id="postContent"></p>

        <h4>Replies</h4>
        <ul id="replyList"></ul>

        <div class="modal-actions">
            <button class="close-btn" onclick="closePostModal()">Close</button>
        </div>
    </div>
</div>

<script>
function openPostModal(post){
    document.getElementById("postTitle").textContent = post.title;
    document.getElementById("postContent").textContent = post.content;

    let html = "";
   /* post.replies.forEach(reply => {
        html += `
            <li>
                <strong>${reply.userId.firstName}:</strong> ${reply.text}
                <form action="/admin/community/${post._id}/reply/${reply._id}/delete" method="POST" style="display:inline;">
                    <button class="delete-btn" style="margin-left:5px;">Delete</button>
                </form>
            </li><hr>`;
    });*/
    post.replies.forEach(reply => {
    html += `
        <li>
            <strong>${reply.userId ? reply.userId.firstName : 'Deleted User'}:</strong> ${reply.text}
            <form action="/admin/community/${post._id}/reply/${reply._id}/delete" method="POST" style="display:inline;">
                <button class="delete-btn" style="margin-left:5px;">Delete</button>
            </form>
        </li><hr>`;
});


    document.getElementById("replyList").innerHTML = html || "<i>No replies yet</i>";
    document.getElementById("postModal").style.display = "flex";
}

function closePostModal(){
    document.getElementById("postModal").style.display = "none";
}
</script>
</body>




