<!-- USER DASHBOARD.EJS-->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Dashboard - Inclusive Learning Hub</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/css/userStyle.css">

      <style>
  
    .user-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 10px;
      border-bottom: 1px solid #ddd;
    }

    .profile {
      display: flex;
      align-items: center;
      font-weight: 600;
      color: #333;
      cursor: pointer;
    }

    .profile-icon {
      background: #d32f2f;
      color: white;
      border-radius: 50%;
      width: 35px;
      height: 35px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 8px;
      font-size: 1rem;
      text-decoration: none;
    }

    .cards {
      display: flex;
      gap: 20px;
      margin-bottom: 40px;
      flex-wrap: wrap;
    }

    .card {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.05);
      flex: 1 1 200px;
      min-width: 200px;
    }
    .card h2 { font-size: 1rem; color: #666; margin-bottom: 10px; }
    .card p { font-size: 2rem; font-weight: bold; color: #d32f2f; margin: 0; }

    .section h2 { margin-bottom: 20px; color: #333; }

    .resource-list {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      margin-bottom: 40px;
    }

    .resource-card {
      background: #ffe0b2;
      padding: 15px 20px;
      border-radius: 6px;
      font-weight: 500;
      color: #e65100;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .resource-card:hover {
      background: #ffcc80;
      transform: translateY(-3px);
    }

    .activity-feed li {
      list-style: none;
      padding: 10px 0;
      border-bottom: 1px solid #eee;
      color: #444;
    }
    .activity-feed li:last-child { border-bottom: none; }

    /* --- Profile Drawer Styles --- */
    .profile-drawer {
      position: fixed;
      top: 0;
      right: -400px;
      width: 400px;
      height: 100%;
      background: white;
      box-shadow: -4px 0 15px rgba(0,0,0,0.15);
      transition: right 0.3s ease-in-out;
      padding: 20px;
      z-index: 2000;
      overflow-y: auto;
    }
    .profile-drawer.open {
      right: 0;
    }

    .drawer-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 1px solid #eee;
    }

    .close-btn {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #666;
      padding: 5px;
    }

    .profile-form label {
      display: block;
      margin-top: 15px;
      margin-bottom: 5px;
      font-weight: 600;
      color: #555;
    }

    .profile-form input[type="text"],
    .profile-form input[type="email"],
    .profile-form textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 1rem;
      box-sizing: border-box;
    }

    .profile-form textarea {
      height: 100px;
      resize: vertical;
    }

    .profile-form button {
      margin-top: 30px;
      padding: 12px;
      background: #d32f2f;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      width: 100%;
      transition: background 0.2s;
    }

    .profile-form button:hover {
      background: #b71c1c;
    }

    .status-badge {
      display: inline-block;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 0.9rem;
      font-weight: bold;
      margin-top: 5px;
    }
    .active-badge { background-color: #e8f5e9; color: #388e3c; }
    .role-badge { background-color: #e3f2fd; color: #1e88e5; }

    /* --- Overlay Styles --- */
    .profile-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.3);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s;
      z-index: 1500;
    }
    .profile-overlay.show {
      opacity: 1;
      pointer-events: auto;
    }

    /* --- Responsive Design --- */
    @media (max-width: 768px) {
      .main {
        margin-left: 0;
        width: 100%;
        padding: 20px;
      }
      .cards, .resource-list {
        flex-direction: column;
      }
      .profile-drawer {
        width: 100%;
      }
    }
  </style>
  
</head>
<body>
<div class="dashboard-container">
  <!-- Sidebar include -->
  <%- include("../partials/userSidebar") %>

  <!-- Main content -->
  <div class="main">
  
    <header class="user-header">
        <h1>Welcome back, Learner!</h1>
        <div class="profile" onclick="openProfileDrawer()">
          <span class="profile-icon" id="profile-initial">U</span>
          Learner User
        </div>
      </header>

    <div class="cards">
      <div class="card">
        <h2>My Learning Resources</h2>
        <p>128</p>
      </div>
      <div class="card">
        <h2>Hours</h2>
        <p>42</p>
      </div>
      <div class="card">
        <h2>Points Earned</h2>
        <p>890</p>
      </div>
    </div>

    <div class="section">
      <h2>Recommended for You</h2>
      <div class="resource-list">
        <div class="resource-card">üß† Brain Puzzle #1</div>
        <div class="resource-card">üìò Visual Learning Tips</div>
        <div class="resource-card">üéÆ Focus Game: ADHD</div>
      </div>
    </div>

    <div class="section">
      <h2>Recent Activity</h2>
      <ul class="activity-feed">
        <li>‚úîÔ∏è Completed ‚ÄúShapes & Patterns‚Äù - 20 mins ago</li>
        <li>üì• Downloaded visual story on daily routines</li>
        <li>üí¨ Commented in Community Forum</li>
      </ul>
    </div>
  
</div>

<!-- Overlay -->
<div class="profile-overlay" id="profile-overlay" onclick="closeProfileDrawer()"></div>

<!-- Profile Drawer -->
<div class="profile-drawer" id="profile-drawer">
  <div class="drawer-header">
    <h3>User Profile</h3>
    <button class="close-btn" onclick="closeProfileDrawer()">√ó</button>
  </div>

  <form class="profile-form" onsubmit="updateProfile(event)">
    <label>Email (Read-only)</label>
    <input type="email" value="learner.user@example.com" disabled title="Email cannot be changed here">

    <label>Role</label>
    <span class="status-badge role-badge">Teacher</span>

    <label>Account Status</label>
    <span class="status-badge active-badge">Active</span>

    <label for="firstName">First Name</label>
    <input type="text" id="firstName" value="Learner" required>

    <label for="lastName">Last Name</label>
    <input type="text" id="lastName" value="User" required>

    <label for="phone">Phone</label>
    <input type="text" id="phone" value="9876543210">

    <label for="bio">Bio / About Me</label>
    <textarea id="bio" placeholder="Tell us a little about your learning goals or specific needs.">
I am a visual learner looking for resources on math and science topics.
    </textarea>

    <!-- üü† Changed Section: Image Upload Instead of URL -->
    <label for="photoUpload">Profile Photo</label>
    <input type="file" id="photoUpload" accept="image/*" onchange="previewProfilePhoto(event)">
    <img id="photoPreview" alt="Profile Preview" 
         style="width:80px;height:80px;border-radius:50%;margin-top:10px;display:none;object-fit:cover;">

    <button type="submit">Update Profile</button>
  </form>
</div>

<script>
  // --- Drawer Toggle ---
  function openProfileDrawer() {
    document.getElementById('profile-drawer').classList.add('open');
    document.getElementById('profile-overlay').classList.add('show');
    document.body.style.overflow = 'hidden';
  }

  function closeProfileDrawer() {
    document.getElementById('profile-drawer').classList.remove('open');
    document.getElementById('profile-overlay').classList.remove('show');
    document.body.style.overflow = '';
  }

  // --- Auto-generate initials ---
  window.addEventListener('DOMContentLoaded', () => {
    const userName = "Learner User";
    const initials = userName.split(" ").map(n => n[0]).join("");
    document.getElementById('profile-initial').textContent = initials;
  });

  // üü† New: Profile Image Preview Logic
  function previewProfilePhoto(event) {
    const file = event.target.files[0];
    const preview = document.getElementById('photoPreview');
    const icon = document.getElementById('profile-initial');

    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        preview.style.display = 'block';
        icon.innerHTML = `<img src="${e.target.result}" alt="Profile Photo" style="width:100%;height:100%;border-radius:50%;object-fit:cover;">`;
      };
      reader.readAsDataURL(file);
    }
  }

  // --- Update Profile Simulation ---
  function updateProfile(event) {
    event.preventDefault();
    const updatedData = {
      firstName: document.getElementById('firstName').value,
      lastName: document.getElementById('lastName').value,
      phone: document.getElementById('phone').value,
      bio: document.getElementById('bio').value
    };

    alert("Saving changes...");
    setTimeout(() => {
      alert("Profile Updated Successfully!\n\n" + JSON.stringify(updatedData, null, 2));
      console.log("Updated Profile Data:", updatedData);
      closeProfileDrawer();
    }, 1000);
  }
</script>

</div>
</body>
</html>
