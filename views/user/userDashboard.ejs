<!-- USER DASHBOARD.EJS-->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Dashboard - Inclusive Learning Hub</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/css/userStyle.css">
</head>
<body>
<div class="dashboard-container">
  <!-- Sidebar include -->
  <%- include("../partials/userSidebar") %>

  <!-- Main content -->
  <div class="main">
  <div class="content-wrapper">
    <header class="user-header">
      <h1>Welcome back, Learner!</h1>
      <div class="profile">
        <span class="profile-icon">U</span> Learner User
      </div>
    </header>

    <div class="cards">
      <div class="card">
        <h2>My Learning Resources</h2>
        <p>128</p>
      </div>
      <div class="card">
        <h2>Completed Activities</h2>
        <p>42</p>
      </div>
      <div class="card">
        <h2>Points Earned</h2>
        <p>890</p>
      </div>
    </div>

    <div class="section">
      <h2>Recommended for You</h2>
      <div class="resource-list">
        <div class="resource-card">🧠 Brain Puzzle #1</div>
        <div class="resource-card">📘 Visual Learning Tips</div>
        <div class="resource-card">🎮 Focus Game: ADHD</div>
      </div>
    </div>

    <div class="section">
      <h2>Recent Activity</h2>
      <ul class="activity-feed">
        <li>✔️ Completed “Shapes & Patterns” - 20 mins ago</li>
        <li>📥 Downloaded visual story on daily routines</li>
        <li>💬 Commented in Community Forum</li>
      </ul>
    </div>
  </div>
</div>

</div>
</body>
</html>
