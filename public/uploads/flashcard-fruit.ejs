  <!-- Bootstrap JS Bundle -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

  <script>
    // Fruit data with emojis
    const fruits = [
      { english: "Apple", malayalam: "‡¥Ü‡¥™‡µç‡¥™‡¥ø‡µæ", emoji: "üçé" },
      { english: "Banana", malayalam: "‡¥µ‡¥æ‡¥¥‡¥™‡µç‡¥™‡¥¥‡¥Ç", emoji: "üçå" },
      { english: "Orange", malayalam: "‡¥®‡¥æ‡¥∞‡¥ô‡µç‡¥ô", emoji: "üçä" },
      { english: "Mango", malayalam: "‡¥Æ‡¥æ‡¥ô‡µç‡¥ô", emoji: "ü•≠" },
      { english: "Grape", malayalam: "‡¥Æ‡µÅ‡¥®‡µç‡¥§‡¥ø‡¥∞‡¥ø", emoji: "üçá" },
      { english: "Strawberry", malayalam: "‡¥∏‡µç‡¥ü‡µç‡¥∞‡µã‡¥¨‡µÜ‡¥±‡¥ø", emoji: "üçì" },
      { english: "Pineapple", malayalam: "‡¥ï‡µà‡¥§‡¥ö‡µç‡¥ö‡¥ï‡µç‡¥ï", emoji: "üçç" },
      { english: "Watermelon", malayalam: "‡¥§‡¥£‡µç‡¥£‡¥ø‡¥Æ‡¥§‡µç‡¥§‡µª", emoji: "üçâ" },
      { english: "Coconut", malayalam: "‡¥§‡µá‡¥ô‡µç‡¥ô", emoji: "ü••" },
      { english: "Papaya", malayalam: "‡¥™‡¥™‡µç‡¥™‡¥æ‡¥Ø", emoji: "üß°" }, /* No papaya emoji, used orange heart */
      { english: "Kiwi", malayalam: "‡¥ï‡¥ø‡¥µ‡¥ø", emoji: "ü•ù" },
      { english: "Cherry", malayalam: "‡¥ö‡µÜ‡¥±‡¥ø", emoji: "üçí" },
    ];

    const grid = document.getElementById("flashcardsGrid");

    fruits.forEach(({ english, malayalam, emoji }) => {
      const card = document.createElement("div");
      card.className = "flashcard";
      card.tabIndex = 0;

      card.innerHTML = `
        <div class="flip-hint">Click to flip</div>
        <div class="flashcard-inner">
          <div class="card-front">
            <div class="fruit-emoji" aria-label="${english}">${emoji}</div>
